<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/one_breath_table_title"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_breathing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/breathing_title"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_dialog_title" />

    <EditText
        android:id="@+id/input_breathing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_10sec"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_breathing_title" />

    <TextView
        android:id="@+id/txt_stop_breathing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/stop_breathing_title"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/input_breathing" />

    <EditText
        android:id="@+id/input_breath_hold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_60sec"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_stop_breathing_title"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/input_series_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_series_8"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_series_number_title" />

    <TextView
        android:id="@+id/txt_series_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/number_of_series"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/input_breath_hold" />
</android.support.constraint.ConstraintLayout>